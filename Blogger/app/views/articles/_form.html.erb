<%= form_for(@article, html: {multipart: true}) do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_area :title %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>
	<p>
  		<%= f.label :tag_list %><br />
  		<%= f.text_field :tag_list %>
	</p>
	<p>
		<% if @article.image.exists? %>
			<%= image_tag @article.image.url %><br>
			<%= link_to "Delete Attachment", removeAttachment_path(@article) %>
		<% else %>
			<%= f.label :image, "Attach an Image" %>
			<%= f.file_field :image %>
		<% end %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	
<% end %>