<h3>Post a Comment</h3>

<div class="form">
	<%= form_for [@article, @comment] do |f| %>
		<div class="fields">
			<p>
				<%= f.label :author_name, "Your Name"%><br>
				<%= f.text_area :author_name %>
			</p>
			<p>
				<%= f.label :body, "Comment"%><br>
				<%= f.text_area :body %>
			</p>
		</div>
		
		<p>		
			<%= f.submit "Post Comment", class: "submit" %> 
		</p>
	<% end %>
</div>